# Queries

# Get All Posts
query GetAllPosts {
  posts {
    id
    title
    content
    published
    createdAt
  }
}

# Mutations

# Mutation - Create Post

mutation CreatePost {
  postCreate(title: "The best TypeScript Course", content: "It's expensive. But really deserve buy it!") {
    userErrors {
      message
    }
    post {
      title
      content
    }
  }
}

mutation UpdatePost {
  postUpdate(postId: 3, post: {
    title: "The Best GraphQL course ever!"
  }) {
    userErrors {
      message
    }
    post {
      content
      title
    }
  }
}